{
  apps : [
    {
      name      : "API",
      script    : "app.js",
      env: {
        COMMON_VARIABLE: "true"
      },
      env_production : {
        NODE_ENV: "production"
      }
    }
  ],

  deploy : {
    production : {
      user : "juno",
      host : "192.168.79.128",
      ref  : "origin/master",
      repo : "git@github.com:repo.git",
      path : "/var/www/LearnKoa/production",
      "post-deploy" : "npm install && pm2 startOrRestart ecosystem.json --env production"
    },
    dev : {
      user : "juno",
      host : "192.168.79.128",
      ref  : "origin/master",
      repo : "git@github.com:repo.git",
      path : "/var/www/LearnKoa/development",
      "post-deploy" : "npm install && pm2 startOrRestart ecosystem.json --env dev",
      env  : {
        NODE_ENV: "dev"
      }
    }
  }
}
